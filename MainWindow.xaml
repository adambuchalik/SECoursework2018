<Window x:Class="SEcoursework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SEcoursework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ToolTip="Select Message ID">
        <ComboBox  x:Name="MessageId_comboBox"
                   HorizontalAlignment="Left" 
                   Margin="217,147,0,0" 
                   VerticalAlignment="Top"
                   Width="62" Height="35"
                  
                   >

            <ComboBoxItem Content="S" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="E" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="T" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <TextBox x:Name="MessageId_textBox" HorizontalAlignment="Left" Height="35" Margin="284,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" ToolTip="Enter 9 digits number" FontSize="14"/>
        <Label Content="Message ID" HorizontalAlignment="Left" Margin="111,147,0,0" VerticalAlignment="Top" Height="35" Width="95" FontSize="14"/>
        <Button x:Name="WriteMessage_btn" Content="Write Message" HorizontalAlignment="Left" Margin="449,147,0,0" VerticalAlignment="Top" Width="177" Click="WriteMessage_btn_Click" Height="35" FontSize="14" Background="#FF96FD7F"/>
    </Grid>
</Window>
