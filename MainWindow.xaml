<Window x:Class="SEcoursework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SEcoursework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ToolTip="Select Message ID">
        <ComboBox  x:Name="MessageId_comboBox"
                   HorizontalAlignment="Left" 
                   Margin="115,56,0,0" 
                   VerticalAlignment="Top"
                   Width="46"
                  
                   >

            <ComboBoxItem Content="S" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="E" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="T" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <TextBox x:Name="MessageId_textBox" HorizontalAlignment="Left" Height="23" Margin="166,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" ToolTip="Enter 9 digits number"/>
        <Label Content="Message ID" HorizontalAlignment="Left" Margin="35,56,0,0" VerticalAlignment="Top"/>
        <Button x:Name="WriteMessage_btn" Content="Write Message" HorizontalAlignment="Left" Margin="291,56,0,0" VerticalAlignment="Top" Width="134" Click="WriteMessage_btn_Click"/>
    </Grid>
</Window>
